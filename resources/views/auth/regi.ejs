<div class="container">
  
  <div class="loginTitle">Register here</div>
<div class="loginTitleBottomBorder"></div>
<br>
<% if(messages.error){  %>

    <span> <%= messages.error %> </span><br>
    <% } %>

<form action="/regiestration" method="POST" class="form-group">
<label for="name">Name:</label>
  <input  name="name" value="<%= messages.name%>" id="name" class="form-control" placeholder="abc def">
  <br>
  <label for="last_name">Last Name:</label>
  <input  name="last_name" value="<%= messages.last_name %>" id="last_name" class="form-control" placeholder="abc-def" >
  <br>
  <label for="email">Email:</label>
  <input  name="email" value="<%= messages.email%>" id="email" class="form-control" placeholder="xyz@gmail.com" >
  <br>
  <label for="phone">Phone:</label>
  <input type="number"  name="phone" value="<%= messages.phone%>" id="phone" class="form-control" placeholder="******" >
  <br>
  <label for="address">Address:</label>
  <input  name="address" value="<%= messages.address%>" id="address" class="form-control" placeholder="asdasfasf-asfdasf-asfasfasdf" >
  <br>

  <button class="loginBtn btn  btn-lg btn-block " style="border: 1px solid orangered;
  background: white;
  color: orangered;
  border-radius: 20px;" type="submit">Submit</button>
</form>



</div>